BasedOnStyle: Google                        # 基于 Google 风格作为默认模板
IndentWidth: 4                              # 缩进宽度 4 空格（Google 默认 2，将其提高为 4）
TabWidth: 4                                 # Tab 宽度视为 4 空格
UseTab: Never                               # 禁止使用 Tab，统一为空格
ColumnLimit: 120                            # 单行最大列宽限制（超过则自动换行，0 表示无限制）
PointerAlignment: Left                      # 指针星号靠左：int *p 而不是 int* p

# ================== 对齐增强 ==================

AlignConsecutiveAssignments: true           # 连续多个赋值语句的等号对齐
AlignConsecutiveDeclarations: true          # 连续声明的变量名称自动对齐

# ================== 花括号风格 ==================

BreakBeforeBraces: Attach                   # 花括号独立换行样式（Attach 风格）

# ================== 短语句换行控制 ==================

AllowShortIfStatementsOnASingleLine: false  # 禁止 if 语句写成一行：if (x) return 0;
AllowShortLoopsOnASingleLine: false         # 禁止 for / while 写成一行
